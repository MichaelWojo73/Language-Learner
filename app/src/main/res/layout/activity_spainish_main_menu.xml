<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spainboardwalk"
    tools:context=".MainMenu">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="Spanish Learning Center"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSpanishAnimals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="133dp"
        android:alpha="0.50"
        android:fontFamily="cursive"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Animales"/>

    <Button
        android:id="@+id/btnSpanishFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnSpanishAnimals"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="71dp"
        android:alpha="0.50"
        android:fontFamily="cursive"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Comida" />

    <Button
        android:id="@+id/btnSpanishSchool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSpanishFood"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="71dp"
        android:alpha="0.50"
        android:background="#000000"
        android:fontFamily="cursive"
        android:text="COLEGIO"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSpanishFamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSpanishAnimals"
        android:layout_alignParentStart="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="51dp"
        android:alpha="0.50"
        android:background="#000000"
        android:fontFamily="cursive"
        android:text="FAMILIA"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="17dp"
        android:text="Please select a category"
        android:textColor="#ffffff" />




</RelativeLayout>