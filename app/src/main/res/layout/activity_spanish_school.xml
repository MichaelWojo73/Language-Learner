<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpanishSchool">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/school" />

    <Button
        android:id="@+id/spanishPencil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spanishNotebook"
        android:layout_alignParentStart="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="51dp"
        android:alpha="0.50"
        android:background="#000000"
        android:fontFamily="cursive"
        android:text="LAPIZ"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/spanishEraser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spanishDesk"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="71dp"
        android:alpha="0.50"
        android:background="#000000"
        android:fontFamily="cursive"
        android:text="BORRADOR"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/spanishNotebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="133dp"
        android:alpha="0.50"
        android:background="#000000"
        android:fontFamily="cursive"
        android:text="CUADERNO"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/spanishDesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spanishNotebook"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="71dp"
        android:alpha="0.50"
        android:background="#000000"
        android:fontFamily="cursive"
        android:text="ESCRITORIO"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="Colegio"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="40dp" />

</RelativeLayout>






